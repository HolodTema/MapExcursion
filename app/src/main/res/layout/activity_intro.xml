<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IntroActivity"
    android:background="@drawable/intro_image_default3">

    <FrameLayout
        android:id="@+id/frame_fragment_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/button_continue"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="?attr/colorPrimary"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:text="@string/text_continue"
        app:layout_constraintBottom_toTopOf="@+id/text_intro_image_caption"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:textColor="?attr/colorPrimary"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:id="@+id/button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="8dp"
        android:text="@string/skip_instruction"
        app:layout_constraintBottom_toTopOf="@+id/text_intro_image_caption"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_intro_image_caption"
        style="@style/text_on_primary.h10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Тажеранские степи, Байкал"
        android:layout_margin="8dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>