<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/image_intro_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/location_marker" />

    <TextView
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/neosans_pro_medium"
        style="@style/text_on_primary.h6"
        android:id="@+id/text_label_intro_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_intro_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>