<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    android:background="@drawable/background_map_item"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_map"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            test:src="@drawable/sight_image_test"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_map_name"
        style="@style/text_on_secondary.h9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/card_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        test:text="Irkutsk: Nature"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_map_caption"
        style="@style/text_on_secondary.h10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_map_name"
        test:text="This city is fulfilled of green parks and roads!"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>